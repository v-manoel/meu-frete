<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="0dp"
    app:cardBackgroundColor="@color/blueapp"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="112dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/card_header"
            >

            <TextView
                android:id="@+id/favPlace_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alias Placeholder"
                android:layout_weight="9"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/favPlace_delete"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blueapp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/deletebtn" />
        </LinearLayout>


        <TextView
            android:id="@+id/favPlace_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_header"
            android:layout_marginTop="14dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Address Description Placeholder"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>